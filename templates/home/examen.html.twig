{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex flex-wrap justify-content-center file-list">
                    {% for file in files %}
                        <div class="card m-2" style="width: 16rem;">
                            <div class="card-body">
                                    <h5 class="card-title">{{ file }}</h5>
                                <a href="{{ path('app_view_exam', {fileName: file}) }}" class="btn btn-outline-dark btn-sm">Voir</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
